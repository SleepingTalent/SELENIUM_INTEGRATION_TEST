<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>SELENIUM_INTEGRATION_TEST</artifactId>
        <groupId>SELENIUM_INTEGRATION_TEST</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>humanResources-ear</artifactId>
    <packaging>ear</packaging>
    <name>>humanResources-ear</name>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <version>1.4</version>
                    <modules>
                        <webModule>
                            <groupId>humanResources-war</groupId>
                            <artifactId>humanResources-war</artifactId>
                            <bundleFileName>humanResources-war.war</bundleFileName>
                            <contextRoot>/humanResources</contextRoot>
                        </webModule>
                        <ejbModule>
                            <groupId>humanResources-ejb</groupId>
                            <artifactId>humanResources-ejb</artifactId>
                            <bundleFileName>humanResources-ejb.jar</bundleFileName>
                        </ejbModule>
                    </modules>
                    <displayName>My Ear Name displayed in the App Server</displayName>
                    <!-- If I want maven to generate the application.xml, set this to true -->
                    <generateApplicationXml>true</generateApplicationXml>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
        <finalName>humanResources-ear</finalName>
    </build>

    <!-- Define the versions of your ear components here -->
    <dependencies>
        <dependency>
            <groupId>humanResources-war</groupId>
            <artifactId>humanResources-war</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>humanResources-ejb</groupId>
            <artifactId>humanResources-ejb</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
